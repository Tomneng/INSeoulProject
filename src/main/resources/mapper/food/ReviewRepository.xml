    <insert id="reviewSave" parameterType="com.inseoul.food.domain.Review">
        INSERT INTO food_reviews (food_id, id, review_category, review_content, review_star)
        VALUES (#{foodId}, #{userId}, #{reviewCategory}, #{reviewContent}, #{reviewStar})
    </insert>

    <!-- 저장된 리뷰카테고리 하나 보여주기-->
    <select id="findById" resultType="String">
        SELECT review_category "reviewCategory" FROM food_reviews
        WHERE review_id = #{reviewId}
    </select>

    <!-- 평점 구하기 -->
    <select id="getRatingAvg" resultType="Double">
        SELECT AVG(review_star) "reviewAvg" FROM food_reviews
        WHERE food_id = #{foodId}
        GROUP BY food_id
    </select>
    <!-- 평점 불러오기 -->
    <update id="updateRating">
        UPDATE food
        SET review_avg = #{reviewAvg}
        WHERE food_id = #{foodId}
    </update>
