    <sql id="SELECT_BASE">
        SELECT r.review_id "reviewId", f.food_id "foodId"
             , r.review_category "reviewCategory", r.review_star "reviewStar"
        FROM food_reviews r, food f
        WHERE f.food_id = r.food_id
    </sql>

