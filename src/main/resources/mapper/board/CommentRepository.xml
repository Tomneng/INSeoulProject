<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.inseoul.board.repository.CommentRepository">

    <resultMap id="mapUser" type="com.inseoul.user.domain.User">
        <result column="userId" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="userRegdate" property="regDate"/>
    </resultMap>

    <resultMap id="mapComment" type="com.inseoul.board.domain.post.Comment">
        <result column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="regdate" property="regDate"/>
        <result column="postId" property="postId"/>
        <collection property="user" resultMap="mapUser"/>
    </resultMap>



    <select id="findByPost" resultMap="mapComment">
        SELECT
            c.com_id "id",
            c.com_content "content",
            c.com_regdate "regDate",
            c.post_id "postId",
            u.user_id "userId",
            u.username "username",
            u.nickname "nickname",
            u.regDate "userRegDate"
        FROM comment c, user u
        WHERE
            c.id = u.user_id
          AND c.post_id = #{postId}
        ORDER BY c.id DESC
    </select>

    <insert id="save" flushCache="true"
            parameterType="com.inseoul.board.domain.post.Comment"
            useGeneratedKeys="true" keyColumn="com_id" keyProperty="id">
        INSERT INTO comment(id, post_id, com_content)
        VALUES(#{user.id}, #{postId}, #{content})
    </insert>

    <delete id="deleteById" flushCache="true">
        DELETE FROM comment WHERE com_id = #{id}
    </delete>

</mapper>